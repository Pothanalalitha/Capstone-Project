package com.example.wipro.lalitha.controller;

import java.util.List;

import org.slf4j.Logger;
import org.slf4j.LoggerFactory;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.example.wipro.lalitha.dto.AuditLogDTO;
import com.example.wipro.lalitha.dto.InvoiceDTO;
import com.example.wipro.lalitha.feign.AuditServiceClient;
import com.example.wipro.lalitha.service.BillingService;

@RestController
@RequestMapping("/api/billing")
public class BillingController {

    private static final Logger logger = LoggerFactory.getLogger(BillingController.class);

    @Autowired
    private BillingService billingService;
    
    @Autowired
    private AuditServiceClient auditServiceClient;

    @GetMapping("/getAllInvoices")
    public ResponseEntity<List<InvoiceDTO>> getAllInvoices() {
        logger.info("Fetching all invoices");
        List<InvoiceDTO> list = billingService.getAllInvoices();
        return ResponseEntity.ok(list);
    }

    @PostMapping("/createInvoices")
    public ResponseEntity<InvoiceDTO> createInvoice(@RequestParam String userId,@RequestBody InvoiceDTO invoiceDTO) {
    	 AuditLogDTO auditLogDTO = new AuditLogDTO(String.valueOf(userId),"CREATE","BILLING","Created Billing");
         auditServiceClient.saveAuditLog(auditLogDTO);
        logger.info("Creating invoice for appointment {}", invoiceDTO.getAppointmentId());
        InvoiceDTO dto = billingService.createInvoice(invoiceDTO);
        return ResponseEntity.ok(dto);
    }
}

